<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CellRegularText">
        <item name="android:textColor">@color/text_regular</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="CellSubText">
        <item name="android:textColor">@color/text_subtext</item>
        <item name="android:textSize">@dimen/text_size_subtext</item>
    </style>
    
</resources>
